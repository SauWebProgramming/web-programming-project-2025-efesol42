@model BendenSana.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Figma Uyumlu Stiller */
    .breadcrumb-text { font-family: 'Poppins', sans-serif; font-size: 14px; opacity: 0.5; margin-bottom: 40px; }
    .page-title { font-family: 'Inter', sans-serif; font-weight: 600; font-size: 36px; margin-bottom: 40px; }

    .form-label-custom { font-family: 'Poppins', sans-serif; color: #666; margin-bottom: 8px; font-size: 14px; }
    .form-input-custom { 
        width: 100%; background: #F5F5F5; border: none; border-radius: 4px; padding: 12px 16px; font-family: 'Poppins', sans-serif;
    }
    .form-input-custom:focus { outline: 1px solid #DB4444; background: white; }

    .checkout-summary { padding: 30px; border-radius: 4px; }
    .summary-item { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px; }
    .summary-img { width: 50px; height: 50px; object-fit: contain; margin-right: 15px; }
    .summary-text { font-family: 'Poppins', sans-serif; font-size: 14px; }
    
    .btn-place-order {
        background-color: #DB4444; color: white; border: none; border-radius: 4px;
        padding: 16px 48px; font-family: 'Poppins', sans-serif; font-weight: 500;
        width: 100%; margin-top: 20px; transition: 0.3s;
    }
    .btn-place-order:hover { background-color: #c93e3e; }

    .payment-option { display: flex; align-items: center; gap: 10px; margin-bottom: 10px; }
    
    .saved-address-select {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 100%;
        background-color: #fff;
    }
</style>

<div class="container py-5">
    <div class="breadcrumb-text">Account / My Account / Product / View Cart / <span class="text-dark fw-bold">CheckOut</span></div>
    <h1 class="page-title">Billing Details</h1>

    <form asp-action="Checkout" method="post">
        <div class="row">
            
            <div class="col-lg-6 mb-5">
                
                @if (Model.UserAddresses != null && Model.UserAddresses.Any())
                {
                    <div class="mb-4 p-3 bg-light rounded border">
                        <label class="form-label fw-bold mb-2">Kayıtlı Adreslerim</label>
                        <select asp-for="SelectedAddressId" class="form-select" id="addressSelect">
                            @foreach (var addr in Model.UserAddresses)
                            {
                                <option value="@addr.Id" 
                                        data-address="@addr.AddressLine" 
                                        data-city="@addr.City" 
                                        data-zip="@addr.ZipCode">
                                    @addr.Title - @addr.AddressLine, @addr.City
                                </option>
                            }
                            <option value="0">Yeni Adres Gir</option>
                        </select>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label-custom">First Name</label>
                        <input asp-for="FirstName" class="form-input-custom" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label-custom">Last Name</label>
                        <input asp-for="LastName" class="form-input-custom" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label-custom">Street Address</label>
                    <input asp-for="AddressLine" class="form-input-custom" id="inputAddress" />
                    <span asp-validation-for="AddressLine" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label-custom">Town/City</label>
                    <input asp-for="City" class="form-input-custom" id="inputCity" />
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label-custom">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-input-custom" />
                    </div>
                    <div class="col-6">
                        <label class="form-label-custom">Zip Code</label>
                        <input asp-for="ZipCode" class="form-input-custom" id="inputZip" />
                    </div>
                </div>

                <h4 class="mt-5 mb-3 fw-bold">Payment Details</h4>
                <div class="p-3 border rounded bg-light">
                    <div class="mb-3">
                        <label class="form-label-custom">Card Holder Name</label>
                        <input asp-for="CardHolderName" class="form-input-custom bg-white" placeholder="Kart üzerindeki isim" />
                        <span asp-validation-for="CardHolderName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label-custom">Card Number</label>
                        <input asp-for="CardNumber" class="form-input-custom bg-white" placeholder="0000 0000 0000 0000" maxlength="19" />
                        <span asp-validation-for="CardNumber" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label-custom">Expiry Date</label>
                            <input asp-for="ExpiryDate" class="form-input-custom bg-white" placeholder="MM/YY" maxlength="5" />
                            <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                        </div>
                        <div class="col-6">
                            <label class="form-label-custom">CVV</label>
                            <input asp-for="Cvv" class="form-input-custom bg-white" placeholder="123" maxlength="4" />
                            <span asp-validation-for="Cvv" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-5 offset-lg-1">
                <div class="checkout-summary">
                    
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="summary-item">
                            <div class="d-flex align-items-center">
                                @if (item.Product.Images != null && item.Product.Images.Any())
                                {
                                    <img src="@item.Product.Images.First().ImageUrl" class="summary-img" alt="img">
                                }
                                else
                                {
                                    <div class="summary-img bg-light border d-flex align-items-center justify-content-center">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                                <span class="summary-text text-truncate" style="max-width: 200px;">@item.Product.Title</span>
                            </div>
                            <span class="summary-text">@((item.Product.Price * item.Quantity).ToString("C0"))</span>
                        </div>
                    }

                    <hr class="my-4">

                    <div class="summary-item">
                        <span class="summary-text">Subtotal:</span>
                        <span class="summary-text">@Model.TotalAmount.ToString("C0")</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-text">Shipping:</span>
                        <span class="summary-text text-success">Free</span>
                    </div>
                    <div class="summary-item">
                        <span class="summary-text fw-bold">Total:</span>
                        <span class="summary-text fw-bold text-danger">@Model.TotalAmount.ToString("C0")</span>
                    </div>

                    <div class="mt-4">
                        <div class="payment-option">
                            <input type="radio" id="bank" name="paymentMethod" checked>
                            <label for="bank" class="summary-text">Bank / Credit Card</label>
                            <div class="ms-auto">
                                <img src="https://placehold.co/40x25?text=Visa" alt="Visa">
                                <img src="https://placehold.co/40x25?text=MC" alt="MasterCard">
                            </div>
                        </div>
                        <div class="payment-option">
                            <input type="radio" id="cod" name="paymentMethod">
                            <label for="cod" class="summary-text">Cash on delivery</label>
                        </div>
                    </div>

                    <button type="submit" class="btn-place-order">Place Order</button>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('addressSelect')?.addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            
            if (this.value !== "0") {
                document.getElementById('inputAddress').value = selectedOption.getAttribute('data-address');
                document.getElementById('inputCity').value = selectedOption.getAttribute('data-city');
                document.getElementById('inputZip').value = selectedOption.getAttribute('data-zip');
            } else {
                // "Yeni Adres Gir" seçilirse temizle
                document.getElementById('inputAddress').value = "";
                document.getElementById('inputCity').value = "";
                document.getElementById('inputZip').value = "";
            }
        });
    </script>
}