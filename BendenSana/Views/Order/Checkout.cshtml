@model BendenSana.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Ödeme ve Onay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <form asp-action="Checkout" method="post">
        <div class="row">

            <div class="col-md-8">
                <h4 class="mb-4 fw-bold">Teslimat Adresi</h4>

                @if (Model.UserAddresses.Any())
                {
                    <div class="row">
                        @foreach (var address in Model.UserAddresses)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-2 shadow-sm address-card">
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="SelectedAddressId" id="addr_@address.Id" value="@address.Id" required checked>
                                            <label class="form-check-label fw-bold d-block mb-1" for="addr_@address.Id">
                                                @(address.Title ?? "Adresim")
                                            </label>

                                            <small class="text-muted d-block">@address.AddressLine</small>

                                            <small class="text-muted">@address.City / @address.Country</small>

                                            @if (!string.IsNullOrEmpty(address.ZipCode))
                                            {
                                                <small class="text-muted">(@address.ZipCode)</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i> Kayıtlı adresiniz bulunamadı. Lütfen önce adres ekleyin.
                    </div>
                }

                <a asp-controller="Address" asp-action="Create" asp-route-returnUrl="/Order/Checkout" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-plus-lg"></i> Yeni Adres Ekle
                </a>

                <hr class="my-4" />

                <h4 class="mb-3 fw-bold">Kart Bilgileri</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Kart Üzerindeki İsim</label>
                        <input asp-for="CardName" class="form-control" placeholder="Ad Soyad" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Kart Numarası</label>
                        <input asp-for="CardNumber" class="form-control" placeholder="0000 0000 0000 0000" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Son Kullanma (AA/YY)</label>
                        <input asp-for="ExpirationDate" class="form-control" placeholder="MM/YY" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">CVV</label>
                        <input asp-for="Cvv" class="form-control" placeholder="123" required />
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card bg-light border-0 rounded-3 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Sipariş Özeti</h5>

                        <div class="mb-3" style="max-height: 200px; overflow-y: auto;">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="d-flex justify-content-between mb-2 small">
                                    <span>@item.Product.Title (x@item.Quantity)</span>
                                    <span class="fw-semibold">@((item.Product.Price * item.Quantity).ToString("C"))</span>
                                </div>
                            }
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Ara Toplam</span>
                            <span class="fw-bold">@Model.TotalAmount.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Kargo</span>
                            <span class="text-success fw-bold">Bedava</span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4 pt-2 border-top">
                            <span class="h5 fw-bold mb-0">Toplam</span>
                            <span class="h4 fw-bold text-primary mb-0">@Model.TotalAmount.ToString("C")</span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-3 fw-bold shadow-sm" @(Model.UserAddresses.Any() ? "" : "disabled")>
                            Siparişi Tamamla <i class="bi bi-arrow-right-short"></i>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>