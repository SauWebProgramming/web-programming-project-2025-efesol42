@model List<Order>

@{
    ViewData["Title"] = "Siparişlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">📦 Siparişlerim</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="bi bi-bag-x fs-1"></i>
            <p class="mt-3 fs-5">Henüz vermiş olduğunuz bir sipariş yok.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Alışverişe Başla</a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Sipariş Kodu</th>
                            <th>Tarih</th>
                            <th>Toplam Tutar</th>
                            <th>Durum</th>
                            <th>Ürün Sayısı</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@order.OrderCode</td>
                                <td>@order.CreatedAt.ToString("dd MMMM yyyy HH:mm")</td>
                                <td class="fw-bold text-success">@order.TotalPrice.ToString("C")</td>
                                <td>
                                    @{
                                        string badgeClass = "bg-secondary";
                                        if (order.Status == OrderStatus.delivered) { badgeClass = "bg-success"; }
                                        else if (order.Status == OrderStatus.shipped) { badgeClass = "bg-primary"; }
                                        else if (order.Status == OrderStatus.cancelled) { badgeClass = "bg-danger"; }
                                        else if (order.Status == OrderStatus.preparing) { badgeClass = "bg-warning text-dark"; }
                                    }
                                    <span class="badge @badgeClass">@order.Status</span>
                                </td>
                                <td>
                                    <i class="bi bi-box-seam"></i> @order.Items.Sum(i => i.Quantity) Adet
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-dark">
                                        Detay Gör <i class="bi bi-arrow-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>