@using BendenSana.Models
@model Order

@{
    ViewData["Title"] = "Sipariş Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Figma Uyumlu Stiller */
    .page-header {
        margin-bottom: 40px;
    }

    .page-title {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 32px;
        color: #111927;
    }

    .featured-tag {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .tag-rect {
        width: 16px;
        height: 32px;
        background: #DB4444;
        border-radius: 4px;
    }

    .tag-text {
        color: #DB4444;
        font-weight: 600;
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
    }

    /* Kart Yapısı */
    .detail-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .card-header-title {
        padding: 24px;
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-weight: 700;
        font-size: 18px;
        color: #111927;
        border-bottom: 1px solid #F2F4F7;
    }

    /* Bilgi Satırları */
    .info-row {
        display: flex;
        padding: 20px 24px;
        border-bottom: 1px solid #F2F4F7;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        width: 180px;
        font-family: 'Inter', sans-serif;
        font-weight: 500;
        font-size: 14px;
        color: #111927;
    }

    .info-value {
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        font-size: 14px;
        color: #6C737F;
    }

    /* Ürün Tablosu Başlıkları */
    .table-header {
        background: #F8F9FA;
        display: flex;
        padding: 12px 24px;
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 12px;
        color: #2F3746;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Ürün Satırı */
    .product-row {
        display: flex;
        align-items: center;
        padding: 20px 24px;
        border-bottom: 1px solid #F2F4F7;
    }

    .product-img {
        width: 64px;
        height: 64px;
        border-radius: 8px;
        object-fit: cover;
        background: #F8F9FA;
        margin-right: 16px;
    }

    .col-product {
        flex: 2;
        display: flex;
        align-items: center;
    }

    .col-price {
        flex: 1;
        font-weight: 500;
        color: #111927;
    }

    .col-qty {
        flex: 1;
        color: #6C737F;
    }

    .col-total {
        flex: 1;
        text-align: right;
        font-weight: 600;
        color: #111927;
    }

    .status-dropdown {
        border: 1px solid #E5E7EB;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 14px;
        color: #111927;
        width: 100%;
        max-width: 300px;
    }
</style>

<div class="container py-5" style="background-color: #F8F9FA; min-height: 100vh;">

    <div class="page-header">
        <div class="featured-tag">
            <div class="tag-rect"></div>
            <span class="tag-text">Order Details</span>
        </div>
        <h1 class="page-title">@Model.OrderCode</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="detail-card">
                <div class="card-header-title">Basic info</div>

                <div class="info-row">
                    <div class="info-label">Customer</div>
                    <div class="info-value">
                        <div class="fw-bold text-dark">@Model.Buyer.FirstName @Model.Buyer.LastName</div>
                        <div>@Model.Buyer.Email</div>
                        <div class="mt-1">@Model.Buyer.PhoneNumber</div>
                    </div>
                </div>

                <div class="info-row">
                    <div class="info-label">Order ID</div>
                    <div class="info-value">@Model.OrderCode</div>
                </div>

                <div class="info-row">
                    <div class="info-label">Date</div>
                    <div class="info-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                </div>

                <div class="info-row">
                    <div class="info-label">Delivery Address</div>
                    <div class="info-value">
                        @if (Model.Address != null)
                        {
                            <div>@Model.Address.AddressLine</div>
                            <div>@Model.Address.City / @Model.Address.Country</div>
                            <div>@Model.Address.ZipCode</div>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Adres bilgisi bulunamadı.</span>
                        }
                    </div>
                </div>

                <div class="info-row">
                    <div class="info-label">Total Amount</div>
                    <div class="info-value fw-bold text-dark">@Model.TotalPrice.ToString("C2")</div>
                </div>

                <div class="info-row align-items-center">
                    <div class="info-label">Status</div>
                    <div class="info-value w-100">
                        <div class="d-flex align-items-center gap-3">
                            <select class="status-dropdown form-select bg-light" disabled>
                                <option>@Model.Status</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="detail-card">
                <div class="card-header-title">Order items</div>

                <div class="table-header">
                    <div style="flex: 2;">Name</div>
                    <div style="flex: 1;">Price</div>
                    <div style="flex: 1;">Quantity</div>
                    <div style="flex: 1; text-align: right;">Total</div>
                </div>

                @foreach (var item in Model.Items)
                {
                    <div class="product-row">
                        <div class="col-product">
                            @if (item.Product.Images != null && item.Product.Images.Any())
                            {
                                <img src="@item.Product.Images.First().ImageUrl" class="product-img" />
                            }
                            else
                            {
                                <div class="product-img d-flex align-items-center justify-content-center text-muted">
                                    <i class="bi bi-image"></i>
                                </div>
                            }
                            <div>
                                <div class="fw-bold text-dark" style="font-size: 14px;">@item.Product.Title</div>
                                <div class="text-muted small">Satıcı: @(item.Seller?.UserName ?? "-")</div>
                            </div>
                        </div>
                        <div class="col-price">@item.Price.ToString("C2")</div>
                        <div class="col-qty">x @item.Quantity</div>
                        <div class="col-total">@((item.Price * item.Quantity).ToString("C2"))</div>
                    </div>
                }
            </div>

            <div class="text-end mb-5">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to Orders</a>
            </div>

        </div>
    </div>
</div>