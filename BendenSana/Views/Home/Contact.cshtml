@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* DÜZELTME: Razor'da CSS import kullanırken @@import yazılır */
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
    }

    /* Sol Bilgi Kartı */
    .contact-info-card {
        background: white;
        box-shadow: 0px 1px 13px rgba(0, 0, 0, 0.05);
        border-radius: 4px;
        padding: 40px 35px;
        height: 100%;
    }

    .icon-circle {
        width: 40px;
        height: 40px;
        background-color: #DB4444;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 20px;
        margin-right: 16px;
    }

    .info-title {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
    }

    .info-text {
        font-size: 14px;
        line-height: 24px;
        margin-bottom: 16px;
        color: #000;
    }

    .divider {
        border-bottom: 1px solid rgba(0,0,0,0.5);
        margin: 32px 0;
    }

    /* Sağ Form Kartı */
    .contact-form-card {
        background: white;
        box-shadow: 0px 1px 13px rgba(0, 0, 0, 0.05);
        border-radius: 4px;
        padding: 40px 32px;
    }

    .form-control-custom {
        background-color: #F5F5F5;
        border: none;
        border-radius: 4px;
        height: 50px;
        padding: 13px 16px;
        font-size: 16px;
        color: #000;
    }

        .form-control-custom::placeholder {
            color: rgba(0,0,0,0.5);
        }

        .form-control-custom:focus {
            background-color: #e9e9e9;
            outline: none;
            box-shadow: none;
        }

    .textarea-custom {
        height: 207px;
        resize: none;
    }

    .btn-send {
        background-color: #DB4444;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 16px 48px;
        font-weight: 500;
        font-size: 16px;
        transition: 0.3s;
    }

        .btn-send:hover {
            background-color: #c93e3e;
        }
</style>

<div class="container py-5">

    <div class="row">

        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="contact-info-card">

                <div class="info-group">
                    <div class="info-title">
                        <div class="icon-circle"><i class="bi bi-telephone"></i></div>
                        <span>Call To Us</span>
                    </div>
                    <div class="info-text">We are available 24/7, 7 days a week.</div>
                    <div class="info-text">Phone: +8801611112222</div>
                </div>

                <div class="divider"></div>

                <div class="info-group">
                    <div class="info-title">
                        <div class="icon-circle"><i class="bi bi-envelope"></i></div>
                        <span>Write To Us</span>
                    </div>
                    <div class="info-text">Fill out our form and we will contact you within 24 hours.</div>
                    <div class="info-text">Emails: customer@exclusive.com</div>
                    <div class="info-text">Emails: support@exclusive.com</div>
                </div>

            </div>
        </div>

        <div class="col-lg-8">
            <div class="contact-form-card">
                <form asp-action="Contact" method="post">
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <input type="text" name="name" class="form-control form-control-custom" placeholder="Your Name *" required>
                        </div>
                        <div class="col-md-4">
                            <input type="email" name="email" class="form-control form-control-custom" placeholder="Your Email *" required>
                        </div>
                        <div class="col-md-4">
                            <input type="tel" name="phone" class="form-control form-control-custom" placeholder="Your Phone *" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <textarea name="message" class="form-control form-control-custom textarea-custom" placeholder="Your Message" required></textarea>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn-send">Send Message</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>