@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Google Fonts - Razor uyumlu @@import */
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;500;600&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        color: #000;
    }

    h1, h2, h3, h4, h5 {
        font-family: 'Inter', sans-serif;
    }

    /* Our Story */
    .story-title {
        font-size: 54px;
        font-weight: 600;
        letter-spacing: 2px;
        margin-bottom: 40px;
    }

    .story-text {
        font-size: 16px;
        line-height: 26px;
        margin-bottom: 24px;
        color: #000;
    }

    .story-img {
        width: 100%;
        border-radius: 4px;
        object-fit: cover;
        height: 609px;
    }

    /* İstatistik Kutuları */
    .stat-box {
        border: 1px solid rgba(0,0,0,0.3);
        border-radius: 4px;
        padding: 30px;
        text-align: center;
        transition: all 0.3s;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .stat-box:hover, .stat-box.active {
            background-color: #DB4444;
            border-color: #DB4444;
            color: white;
        }

    /* İkon Dairesi */
    .icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: rgba(47, 46, 48, 0.3); /* Gri Daire */
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 24px;
        transition: all 0.3s;
    }

    .inner-circle {
        width: 58px;
        height: 58px;
        border-radius: 50%;
        background-color: black;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    /* Hover durumunda ikon renkleri */
    .stat-box:hover .icon-circle, .stat-box.active .icon-circle {
        background-color: rgba(255,255,255,0.3);
    }

    .stat-box:hover .inner-circle, .stat-box.active .inner-circle {
        background-color: white;
        color: black;
    }

    .stat-box:hover p, .stat-box.active p {
        color: white;
    }

    .stat-number {
        font-size: 32px;
        font-weight: 700;
        font-family: 'Inter', sans-serif;
        margin-bottom: 12px;
    }

    .stat-desc {
        font-size: 16px;
    }

    /* Takım Kartları */
    .team-card {
        background: #F5F5F5;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 30px;
    }

    .team-img-wrapper {
        height: 430px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        padding-top: 30px;
    }

    .team-img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .team-info {
        margin-top: 32px;
    }

    .team-name {
        font-size: 32px;
        font-weight: 500;
        font-family: 'Inter', sans-serif;
        margin-bottom: 8px;
    }

    .team-role {
        font-size: 16px;
        margin-bottom: 16px;
    }

    .social-icons a {
        color: black;
        margin-right: 16px;
        font-size: 20px;
        transition: 0.2s;
    }

        .social-icons a:hover {
            color: #DB4444;
        }

    /* Hizmetler (Alt Kısım) */
    .service-item {
        text-align: center;
    }

    .service-icon-wrapper {
        width: 80px;
        height: 80px;
        margin: 0 auto 24px;
        background: rgba(47, 46, 48, 0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .service-icon-inner {
        width: 58px;
        height: 58px;
        background: black;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
    }

    .service-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 8px;
        text-transform: uppercase;
    }

    .service-desc {
        font-size: 14px;
    }
</style>

