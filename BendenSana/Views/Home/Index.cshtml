@model List<Product>

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Paytone+One&family=Poppins:wght@400;500;600&family=Inter:wght@400;600;700&family=Open+Sans:wght@400;600&family=Lato:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Paytone+One&family=Inter:wght@400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --center-x: 50%;
    }

    .hero-container {
        width: 100%;
        height: 100vh;
        min-height: 900px;
        position: relative;
        overflow: hidden;
        background-color: #fff;
    }

    /* Arka plandaki turuncu blur - Tam Orta */
    .hero-blur-bg {
        width: 30vw;
        height: 30vw;
        left: var(--center-x);
        top: 55%;
        transform: translate(-50%, -50%);
        position: absolute;
        background: radial-gradient(circle, #DB4444 40%, rgba(255, 100, 70, 0) 70%);
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.5;
        z-index: 1;
        opacity: 0;
        animation: blurGlow 2s ease-in-out 0.5s forwards;
    }

    .hero-content {
        position: relative;
        z-index: 10;
        text-align: center;
        padding-top: 5vh;
    }

    .hero-title {
        font-family: 'Paytone One', sans-serif;
        font-size: clamp(32px, 5vw, 64px); /* Ekran küçüldükçe yazı da küçülür */
        color: #0B0D0F;
        margin-bottom: 20px;
    }

    .hero-description {
        font-family: 'Inter', sans-serif;
        font-size: clamp(14px, 1.2vw, 18px);
        color: #404040;
        max-width: 700px;
        margin: 0 auto;
    }
    /* Giriş Efekti: Aşağıdan yukarı ve görünürlük artışı */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(50px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Kırmızı Blur Parlama Efekti */
    @@keyframes blurGlow {
        from

    {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.5);
    }

    to {
        opacity: 0.5;
        transform: translate(-50%, -50%) scale(1);
    }

    }

    /* Deniz Dalgalanma Efekti (Yukarı-Aşağı) */
    @@keyframes floating {
        0%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-20px);
    }

    100% {
        transform: translateY(0px);
    }

    }

    /* Resimlerin Dinamik Konumlandırılması */
    .hero-img {
        position: absolute;
        border-radius: 20px;
        object-fit: cover;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        z-index: 5;
        transition: transform 0.3s ease;
        opacity: 0;
        animation: fadeInUp 1.3s ease-out forwards;
        /* fadeInUp animasyonu 1.5s sürer. Floating animasyonu sonsuz döner */
        animation: fadeInUp 1.3s ease-out forwards, floating 4s ease-in-out infinite;
        animation-delay: inherit; /* Yukarıdaki delay değerlerini miras alır */
    }

    @@keyframes floatingMain {
        0%

    {
        transform: translate(-50%, -15%) translateY(0px);
    }

    50% {
        transform: translate(-50%, -15%) translateY(-10px);
    }

    100% {
        transform: translate(-50%, -15%) translateY(0px);
    }

    }

    /* Sol Grup (Merkezden sola doğru hesaplama) */
    .img-l1 {
        width: 230px;
        height: 210px;
        left: calc(var(--center-x) - 650px);
        top: 375px;
        animation-delay: 1.2s;
    }

    .img-l2 {
        width: 230px;
        height: 150px;
        left: calc(var(--center-x) - 380px);
        top: 295px;
        animation-delay: 1.0s;
    }

    .img-l3 {
        width: 230px;
        height: 210px;
        left: calc(var(--center-x) - 380px);
        top: 465px;
        animation-delay: 1.0s;
    }

    /* Orta Büyük Resim - Tam Merkez */
    .img-main {
        width: 250px;
        height: 520px;
        left: var(--center-x);
        top: 300px;
        transform: translate(-50%, -15%); /* Tam merkezleme */
        border: 3px solid #fff;
        animation-delay: 0.8s;
        animation: fadeInUp 1.3s ease-out forwards, floatingMain 4s ease-in-out infinite;
    }

    /* Sağ Grup (Merkezden sağa doğru hesaplama) */
    .img-r1 {
        width: 230px;
        height: 210px;
        left: calc(var(--center-x) + 150px);
        top: 295px;
        animation-delay: 0.6s;
    }

    .img-r2 {
        width: 230px;
        height: 150px;
        left: calc(var(--center-x) + 150px);
        top: 525px;  
        animation-delay: 0.4s;
    }

    .img-r3 {
        width: 230px;
        height: 210px;
        left: calc(var(--center-x) + 410px);
        top: 375px;
        animation-delay: 0.6s;
    }

    /* Hover efekti */
    .hero-img:hover {
        transform: scale(1.05);
        z-index: 20;
        animation-play-state: paused;
    }

    .img-main:hover {
        transform: translate(-50%, -15%) scale(1.03);
    }

    

    /* Floating Images Animation */
    .floating-img {
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .floating-img:hover {
            transform: scale(1.05);
        }

    /* Kategori Kartları */
    .section-label {
        color: #DB4444;
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .section-label::before {
            content: "";
            display: inline-block;
            width: 20px;
            height: 40px;
            background-color: #DB4444;
            border-radius: 4px;
        }

    .category-card {
        width: 170px;
        height: 145px;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 4px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: black;
        gap: 15px;
        transition: all 0.3s;
        background: white;
    }

        .category-card:hover {
            background-color: #DB4444;
            color: white;
            border-color: #DB4444;
        }

    /* Ürün Kartları (Overlay Style) */
    .product-showcase-card {
        height: 500px;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
        background: black; /* Resim yüklenmezse arka plan */
    }

        .product-showcase-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

        .product-showcase-card:hover img {
            transform: scale(1.05);
        }

    .card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, rgba(24, 59, 86, 0) 0%, rgba(21, 37, 50, 0.8) 100%);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 30px;
    }

    /* Hakkımızda Bölümü */
    .about-container {
        position: relative;
        padding: 40px;
        background: white;
        border: 1px solid black;
        z-index: 2;
    }

    .about-bg-layer {
        position: absolute;
        border: 1px solid black;
        z-index: 1;
    }

    
</style>

<section class="hero-container">
    <div class="hero-blur-bg"></div>

    <div class="hero-content container">
        <h1 class="hero-title">İKİNCİ EL SATIŞ PLATFORMU</h1>
        <p class="hero-description">
            Benden Sana: Kullanmadığın ürünleri yeni sahipleriyle buluşturan güvenli ve kolay ikinci el platformu.
        </p>
    </div>

    <div class="img-grid">
        <img src="~/images/heroImages/4.png" class="hero-img img-l1" alt="1">
        <img src="~/images/heroImages/7.png" class="hero-img img-l2" alt="2">
        <img src="~/images/heroImages/1.png" class="hero-img img-l3" alt="3">

        <img src="~/images/heroImages/2.png" class="hero-img img-main" alt="Main">

        <img src="~/images/heroImages/6.png" class="hero-img img-r1" alt="4">
        <img src="~/images/heroImages/3.png" class="hero-img img-r2" alt="5">
        <img src="~/images/heroImages/5.png" class="hero-img img-r3" alt="6">
    </div>
</section>

<div class="container mb-5 mt-5">
    <div class="section-label">Kategorilerimiz</div>
    <h2 class="fw-bold mb-5" style="font-family: 'Inter', sans-serif;">Kategorilerle Arama Yapın</h2>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        <a asp-controller="Product" asp-action="Index" asp-route-search="Phones" class="category-card">
            <i class="bi bi-phone fs-2"></i>
            <span class="fw-medium">Phones</span>
        </a>
        <a asp-controller="Product" asp-action="Index" asp-route-search="Computers" class="category-card">
            <i class="bi bi-laptop fs-2"></i>
            <span class="fw-medium">Computers</span>
        </a>
        <a asp-controller="Product" asp-action="Index" asp-route-search="SmartWatch" class="category-card">
            <i class="bi bi-watch fs-2"></i>
            <span class="fw-medium">SmartWatch</span>
        </a>
        <a asp-controller="Product" asp-action="Index" asp-route-search="Camera" class="category-card">
            <i class="bi bi-camera fs-2"></i>
            <span class="fw-medium">Camera</span>
        </a>
        <a asp-controller="Product" asp-action="Index" asp-route-search="HeadPhones" class="category-card">
            <i class="bi bi-headphones fs-2"></i>
            <span class="fw-medium">HeadPhones</span>
        </a>
        <a asp-controller="Product" asp-action="Index" asp-route-search="Gaming" class="category-card">
            <i class="bi bi-controller fs-2"></i>
            <span class="fw-medium">Gaming</span>
        </a>
    </div>
</div>

<div class="container mb-5" style="margin-top: 80px;">
    <div class="section-label">Ürünler</div>
    <div class="d-flex justify-content-between align-items-end mb-4">
        <h2 class="fw-bold" style="font-family: 'Inter', sans-serif;">Satışa Çıkarılan Son Ürünler</h2>
        <a asp-controller="Product" asp-action="Index" class="btn btn-dark px-4 py-2">Hepsine Bak</a>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            // İlk 3 veya 4 ürünü vitrinde gösteriyoruz
            @foreach (var item in Model.Take(3))
            {
                <div class="col-md-4">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                        <div class="product-showcase-card shadow-sm">
                            @if (item.Images != null && item.Images.Any())
                            {
                                <img src="@item.Images.First().ImageUrl" alt="@item.Title">
                            }
                            else
                            {
                                <img src="https://placehold.co/600x800?text=No+Image" alt="No Image">
                            }

                            <div class="card-overlay text-white">
                                <h3 class="fw-bold mb-1">@item.Title</h3>
                                <p class="opacity-75 mb-3">@item.Price.ToString("C0")</p>

                                <div class="d-flex align-items-center gap-2">
                                    <img src="https://placehold.co/40x40" class="rounded-circle border border-white" alt="User">
                                    <div>
                                        <div class="small fw-bold">@(item.Seller?.UserName ?? "Satıcı")</div>
                                        <div class="small text-success" style="font-size: 10px;">Güvenilir Kullanıcı</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5 bg-light rounded">
                <p class="text-muted mb-0">Henüz vitrine eklenen ürün yok. İlk ilanı sen ver!</p>
                <a asp-controller="Product" asp-action="Create" class="btn btn-outline-dark mt-3">İlan Ver</a>
            </div>
        }
    </div>
</div>

