@model BendenSana.ViewModels.PaymentOptionsViewModel

@{
    ViewData["Title"] = "My Payment Options";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Ortak Stiller (Sidebar & Breadcrumb) */
    .breadcrumb-text {
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
        color: #000;
        opacity: 0.5;
    }
    .breadcrumb-text span { opacity: 1; font-weight: 500; }

    /* Sol Menü */
    .account-sidebar-title {
        font-family: 'Poppins', sans-serif;
        font-size: 16px;
        font-weight: 600;
        color: #000;
        margin-bottom: 16px;
    }
    .account-sidebar-link {
        font-family: 'Poppins', sans-serif;
        font-size: 16px;
        color: #000;
        opacity: 0.5;
        text-decoration: none;
        display: block;
        margin-bottom: 12px;
        margin-left: 35px;
        transition: all 0.3s;
    }
    .account-sidebar-link:hover { opacity: 1; color: #DB4444; }
    .account-sidebar-link.active { color: #DB4444; opacity: 1; font-weight: 500; }

    /* Sağ Form Alanı */
    .payment-card {
        background: white;
        border-radius: 4px;
        box-shadow: 0 1px 13px rgba(0,0,0,0.05);
        padding: 40px 80px;
    }

    .form-title {
        color: #DB4444;
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        font-size: 20px;
        margin-bottom: 24px;
    }

    .form-label-custom {
        font-family: 'Poppins', sans-serif;
        font-size: 16px;
        color: #000;
        margin-bottom: 8px;
        display: block;
    }

    .form-input-custom {
        width: 100%;
        background-color: #F5F5F5;
        border: none;
        border-radius: 4px;
        padding: 13px 16px;
        color: #000;
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
    }
    .form-input-custom:focus { outline: 1px solid #DB4444; background-color: #fff; }

    /* Butonlar */
    .btn-save {
        background-color: #DB4444;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 16px 48px;
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
    }
    .btn-save:hover { background-color: #c93e3e; }

    .btn-cancel {
        background: transparent;
        border: none;
        color: #000;
        font-family: 'Poppins', sans-serif;
        font-size: 16px;
        margin-right: 32px;
        cursor: pointer;
        text-decoration: none;
    }
    .btn-cancel:hover { text-decoration: underline; }
</style>

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div class="breadcrumb-text">Home / <span>My Account</span></div>
        <div class="breadcrumb-text">Welcome! <span style="color: #DB4444;">@User.Identity.Name</span></div>
    </div>

    <div class="row">

        <div class="col-lg-3 mb-5 mb-lg-0">
            <div class="mb-4">
                <div class="account-sidebar-title">Manage My Account</div>

                <a href="@Url.Action("EditProfile", "Profile")" class="account-sidebar-link">My Profile</a>
                <a href="@Url.Action("Index", "Address")" class="account-sidebar-link">Address Book</a>
                <a href="@Url.Action("Index", "Payment")" class="account-sidebar-link active">My Payment Options</a>
            </div>

            <div>
                <div class="account-sidebar-title">My Orders</div>

                <a href="@Url.Action("Index", "Order")" class="account-sidebar-link">Siparişlerim</a>
                <a href="@Url.Action("MyProducts", "Product")" class="account-sidebar-link">Takas Ürünlerim</a>
                <a href="@Url.Action("Offers", "Trade")" class="account-sidebar-link">Takas Tekliflerim</a>
            </div>
        </div>

        <div class="col-lg-9">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mb-4">@TempData["Success"]</div>
            }

            <div class="payment-card">
                <form asp-controller="Payment" asp-action="Index" method="post">

                    <h3 class="form-title">Edit Your Payment Options</h3>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label-custom">First Name</label>
                            <input asp-for="FirstName" class="form-input-custom" placeholder="Adınız" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mt-3 mt-md-0">
                            <label asp-for="LastName" class="form-label-custom">Last Name</label>
                            <input asp-for="LastName" class="form-input-custom" placeholder="Soyadınız" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CardNumber" class="form-label-custom">Kart Numarası</label>
                        <input asp-for="CardNumber" class="form-input-custom" placeholder="0000 0000 0000 0000" maxlength="19" />
                        <span asp-validation-for="CardNumber" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="ExpiryDate" class="form-label-custom">Son Kullanım Tarihi</label>
                            <input asp-for="ExpiryDate" class="form-input-custom" placeholder="MM/YY" maxlength="5" />
                            <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mt-3 mt-md-0">
                            <label asp-for="Cvv" class="form-label-custom">CVV</label>
                            <input asp-for="Cvv" class="form-input-custom" placeholder="123" maxlength="4" />
                            <span asp-validation-for="Cvv" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end align-items-center mt-5">
                        <a asp-controller="Home" asp-action="Index" class="btn-cancel">Cancel</a>
                        <button type="submit" class="btn-save">Save Changes</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>