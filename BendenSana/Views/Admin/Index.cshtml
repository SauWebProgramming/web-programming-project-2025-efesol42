@using BendenSana.ViewModels
@{
    ViewData["Title"] = "Admin Dashboard";
    var topSellers = ViewBag.TopSellers as List<SellerListViewModel>;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4 bg-light">
    <div class="mb-4">
        <div class="d-flex align-items-center gap-2 mb-2">
            <div style="width: 15px; height: 35px; background: #DB4444; border-radius: 4px"></div>
            <span class="text-danger fw-bold">Öne Çıkan</span>
        </div>
        <h2 class="fw-bold">Web Sitede Satış Faaliyetleri</h2>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px; height: 450px;">
                <h5 class="fw-bold mb-4">Satış Geliri (TL)</h5>
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px; height: 450px;">
                <h5 class="fw-bold mb-4">Ülke Bazlı Ziyaretler</h5>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>Ülke</th>
                                <th>Değer</th>
                                <th>SEO</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span class="me-2">🇺🇸</span> United States</td>
                                <td class="fw-bold">31,200</td>
                                <td class="text-success">40%</td>
                            </tr>
                            <tr>
                                <td><span class="me-2">🇬🇧</span> United Kingdom</td>
                                <td class="fw-bold">12,700</td>
                                <td class="text-success">47%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4 pt-4">
        <div class="d-flex align-items-center gap-2 mb-2">
            <div style="width: 15px; height: 35px; background: #DB4444; border-radius: 4px"></div>
            <span class="text-danger fw-bold">Öne Çıkan</span>
        </div>
        <h2 class="fw-bold">En Çok Satan Satıcılar</h2>
    </div>

    <div class="row g-4">
        @if (topSellers != null)
        {
            foreach (var seller in topSellers)
            {
                <div class="col-md-4 text-center">
                    <div class="card border-0 shadow-sm overflow-hidden mb-3" style="border-radius: 4px; background: #F5F5F5;">
                        <div class="p-5">
                            <img src="https://ui-avatars.com/api/?name=@seller.FullName&background=random&size=200" 
                                 class="img-fluid rounded shadow-sm" style="max-height: 300px;" alt="@seller.FullName">
                        </div>
                    </div>
                    <h3 class="h4 fw-bold mb-1">@seller.FullName</h3>
                    <p class="text-muted mb-0">@seller.Email</p>
                    <span class="badge bg-dark mt-2">@seller.ProductCount İlan</span>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('salesChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ChartLabels)),
                datasets: [{
                    label: 'Günlük Kazanç',
                    data: @Html.Raw(Json.Serialize(ViewBag.ChartValues)),
                    borderColor: '#6366F1',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 5,
                    pointBackgroundColor: '#6366F1'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { display: false } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}