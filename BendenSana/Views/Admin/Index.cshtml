@using BendenSana.Models.ViewModels
@using BendenSana.ViewModels
@{
    ViewData["Title"] = "Admin Dashboard";
    var topSellers = ViewBag.TopSellers as List<SellerListViewModel>;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4 bg-light">
    <div class="mb-4">
        <div class="d-flex align-items-center gap-2 mb-2">
            <div style="width: 15px; height: 35px; background: #DB4444; border-radius: 4px"></div>
            <span class="text-danger fw-bold">Öne Çıkan</span>
        </div>
        <h2 class="fw-bold">Web Sitede Satış Faaliyetleri</h2>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px; height: 450px;">
                <h5 class="fw-bold mb-4">Satış Geliri (TL)</h5>
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px; height: 450px;">
                <h5 class="fw-bold mb-4">Ülke Bazlı Ziyaretler (Kullanıcılar)</h5>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>Ülke</th>
                                <th>Değer</th>
                                <th>Oran</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.CountryStats != null && ((List<CountryStatViewModel>)ViewBag.CountryStats).Any())
                            {
                                foreach (var stat in (List<CountryStatViewModel>)ViewBag.CountryStats)
                                {
                                    <tr>
                                        <td>@stat.Name</td>
                                        <td class="fw-bold">@stat.Value.ToString("N0")</td>
                                        <td class="text-success">@stat.SEO</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Henüz adres verisi bulunmuyor.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4 pt-4">
        <div class="d-flex align-items-center gap-2 mb-2">
            <div style="width: 15px; height: 35px; background: #DB4444; border-radius: 4px"></div>
            <span class="text-danger fw-bold">Öne Çıkan</span>
        </div>
        <h2 class="fw-bold">En Çok Satan Satıcılar</h2>
    </div>

    <div class="row g-4">
        @if (topSellers != null)
        {
            foreach (var seller in topSellers)
            {
                <div onclick="location.href='@Url.Action("Details",new { id = seller.Id })'" class="col-md-4 text-center" style="cursor:pointer">
                    <div class="card border-0 shadow-sm overflow-hidden mb-3" style="border-radius: 4px; background: #F5F5F5;">
                        <div class="p-5">
                            <img src="https://ui-avatars.com/api/?name=@seller.FullName&background=random&size=200" 
                                 class="img-fluid rounded shadow-sm" style="max-height: 300px;" alt="@seller.FullName">
                        </div>
                    </div>
                    <h3 class="h4 fw-bold mb-1">@seller.FullName</h3>
                    <p class="text-muted mb-0">@seller.Email</p>
                    <span class="badge bg-dark mt-2">@seller.ProductCount İlan</span>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('salesChart').getContext('2d');

        // Statik Örnek Veriler (Son 12 Günün Kazanç Trendi)
        const staticLabels = ['01 Ara', '03 Ara', '05 Ara', '07 Ara', '09 Ara', '11 Ara', '13 Ara', '15 Ara', '17 Ara', '19 Ara', '21 Ara', '23 Ara'];
        const staticValues = [1250, 3800, 2400, 5100, 4200, 6800, 5900, 8200, 7100, 9500, 8800, 11200];

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: staticLabels,
                datasets: [{
                    label: 'Günlük Kazanç (TL)',
                    data: staticValues,
                    borderColor: '#6366F1', // Indigo rengi
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    fill: true,
                    tension: 0.4, // Çizgiyi yumuşatır (kavisli yapar)
                    pointRadius: 4,
                    pointHoverRadius: 7,
                    pointBackgroundColor: '#6366F1',
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index',
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#1e293b',
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 13 },
                        padding: 12,
                        displayColors: false,
                        callbacks: {
                            label: function(context) {
                                return 'Kazanç: ₺' + context.parsed.y.toLocaleString();
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(0, 0, 0, 0.05)' },
                        ticks: {
                            callback: function(value) {
                                return '₺' + value.toLocaleString();
                            }
                        }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
}