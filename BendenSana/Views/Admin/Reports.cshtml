@model List<ProductReport>

@{
    ViewData["Title"] = "Şikayet Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-shield-exclamation text-danger"></i> Şikayet Bildirimleri</h2>
        <span class="badge bg-danger fs-6">@Model.Count(x => x.Status == "pending") Bekleyen</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-success text-center p-5">
            <i class="bi bi-check-circle fs-1"></i>
            <p class="mt-3">Harika! Şu an incelenecek bir şikayet yok.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle bg-white mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Şikayet Eden</th>
                        <th>Şikayet Edilen Ürün</th>
                        <th>Sebep</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Status == "pending" ? "" : "opacity-50 bg-light")">
                            <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center" style="width: 30px; height: 30px; font-size: 0.8rem;">
                                        @(item.Reporter?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <span>@item.Reporter?.UserName</span>
                                </div>
                            </td>
                            <td>
                                @if (item.Product != null)
                                {
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none fw-bold text-dark" target="_blank">
                                        <i class="bi bi-box-arrow-up-right"></i> @item.Product.Title
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic text-decoration-line-through">Silinmiş Ürün</span>
                                }
                            </td>
                            <td>
                                <span class="fw-bold text-danger">@item.Reason</span>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <br />
                                    <small class="text-muted">"@item.Description"</small>
                                }
                            </td>
                            <td>
                                @if (item.Status == "pending")
                                {
                                    <span class="badge bg-warning text-dark">İnceleniyor</span>
                                }
                                else if (item.Status == "resolved")
                                {
                                    <span class="badge bg-success">Çözüldü</span>
                                }
                                else
                                {
                                    <span class="badge bg-dark">Yasaklandı</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (item.Status == "pending" && item.Product != null)
                                {
                                    <div class="d-flex justify-content-end gap-2">
                                        <form asp-controller="Admin" asp-action="ResolveReport" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Sorun Yok / Kapat">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>

                                        <form asp-controller="Admin" asp-action="BanProduct" method="post" onsubmit="return confirm('Bu ürünü kalıcı olarak silmek/yasaklamak istediğinize emin misiniz?');">
                                            <input type="hidden" name="reportId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Ürünü Yasakla">
                                                <i class="bi bi-trash-fill"></i> Yasakla
                                            </button>
                                        </form>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>