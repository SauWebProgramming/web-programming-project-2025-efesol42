@model IEnumerable<global::Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4" style="background-color: #fcfcfc; min-height: 100vh; font-family: 'Inter', sans-serif;">

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <div class="d-flex align-items-center mb-2" style="gap: 16px;">
                <div style="width: 20px; height: 40px; background: #DB4444; border-radius: 4px"></div>
                <span style="color: #DB4444; font-size: 16px; font-family: 'Poppins'; font-weight: 600;">Featured</span>
            </div>
            <h1 class="fw-bold" style="font-size: 36px; letter-spacing: 1.44px;">Allowed Categories</h1>
        </div>

        <div class="col-md-6">
            
            <form asp-action="Category" method="get" class="d-flex justify-content-md-end gap-2">
                <a asp-controller="Category" asp-action="Create"
                   class="btn btn-outline-danger btn-sm px-4 fw-bold"
                   style="border-color: #FF4F5A; color: #FF4F5A; border-radius: 4px;">
                    + Add
                </a>
                <div class="position-relative w-75">
                    <input type="text" name="search" value="@ViewBag.SearchTerm"
                           class="form-control px-4"
                           placeholder="Kategori veya alt kategori ara..."
                           style="border-radius: 8px; border: 1px solid #D3D3D3; height: 45px;">
                </div>
                <button type="submit" class="btn btn-dark px-4" style="border-radius: 8px;">Ara</button>

                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Category" class="btn btn-outline-secondary d-flex align-items-center" style="border-radius: 8px;">Sıfırla</a>
                }
            </form>
        </div>
    </div>

    <div class="d-flex flex-column gap-4">
        @if (Model != null && Model.Any())
        {
            foreach (var parent in Model)
            {
                <div class="card border-0 shadow-sm p-4" style="background: white; border-radius: 12px; border: 1px solid #D3D3D3 !important;">
                    <div class="row align-items-start">

                        <div class="col-auto">
                            <div class="d-flex align-items-center justify-content-center bg-white border rounded" style="width: 140px; height: 150px; border: 1px solid #D3D3D3 !important;">
                                <img src="@(parent.ImageUrl ?? "https://placehold.co/113x120")"
                                     alt="@parent.Name"
                                     style="width: 113px; height: 120px; object-fit: contain;" />
                            </div>
                        </div>

                        <div class="col px-4">
                            <h4 class="fw-bold mb-1" style="font-size: 18px; color: #1C1A1A;">@parent.Name</h4>
                            <p class="mb-3" style="color: #9B9B9B; font-size: 12px;">Sub Categories</p>

                            <div class="d-flex flex-wrap gap-2">
                                @if (parent.Children != null && parent.Children.Any())
                                {
                                    foreach (var child in parent.Children)
                                    {
                                        <div class="px-3 py-1 bg-light rounded" style="font-size: 13px; color: #454545; border: 1px solid #eee;">
                                            @child.Name
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small italic">Alt kategori bulunamadı.</span>
                                }
                            </div>
                        </div>

                        <div class="col-auto d-flex gap-2">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@parent.Id"
                               class="btn btn-outline-danger btn-sm px-4 fw-bold"
                               style="border-color: #FF4F5A; color: #FF4F5A; border-radius: 4px;">
                                Edit
                            </a>

                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@parent.Id" method="post" onsubmit="return confirm('Bu kategoriyi ve alt kategorilerini silmek istediğinize emin misiniz?')">
                                <button type="submit" class="btn btn-outline-danger btn-sm px-3 fw-bold"
                                        style="border-color: #FF4F5A; color: #FF4F5A; border-radius: 4px;">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5 card border-0 shadow-sm" style="border-radius: 12px;">
                <h5 class="text-muted">Aramanıza uygun kategori bulunamadı.</h5>
                <a asp-action="Category" class="text-danger">Tüm kategorileri göster</a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination gap-2 border-0">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link border shadow-sm rounded-circle d-flex align-items-center justify-content-center"
                               asp-action="Category"
                               asp-route-page="@i"
                               asp-route-search="@ViewBag.SearchTerm"
                               style="width: 45px; height: 45px; @(i == ViewBag.CurrentPage ? "background-color: #DB4444; border-color: #DB4444; color: white;" : "color: #1C1A1A; background-color: white;")">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Poppins:wght@600&display=swap" rel="stylesheet">

<style>
    .page-link:hover {
        background-color: #f8d7da !important;
        color: #DB4444 !important;
        border-color: #DB4444 !important;
    }

    .pagination .active .page-link:hover {
        background-color: #DB4444 !important;
        color: white !important;
    }
</style>