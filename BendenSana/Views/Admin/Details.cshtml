@model BendenSana.ViewModels.SellerDetailsViewModel
@{
    ViewData["Title"] = "Satıcı Profili";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700&family=Poppins:wght@600&display=swap" rel="stylesheet">

<div class="container-fluid" style="position: relative; min-height: 1000px; background-color: #fcfcfc; font-family: 'Inter', sans-serif;">

    <div style="position: absolute; left: 316px; top: 84px;" class="d-flex flex-column gap-3">
        <div class="d-flex align-items-center" style="gap: 16px;">
            <div style="width: 20px; height: 40px; background: #DB4444; border-radius: 4px;"></div>
            <span style="font-family: 'Poppins', sans-serif; font-weight: 600; font-size: 16px; color: #DB4444;">Featured</span>
        </div>
        <h1 class="fw-bold" style="font-family: 'Inter', sans-serif; font-size: 36px; color: #000000; letter-spacing: 1.44px;">Satici Profili</h1>
    </div>

    <div style="position: absolute; width: 402px; left: 333px; top: 282px;">
        <div style="width: 200px; height: 200px; background: #F5F5F5; border-radius: 4px; overflow: hidden;" class="shadow-sm mb-4">
            <img src="@(Model.User.ProfileImageUrl ?? "https://placehold.co/200x200")" class="w-100 h-100" style="object-fit: cover;" />
        </div>

        <div style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 33.3px; color: #111927;" class="mb-2">
            @Model.User.FirstName @Model.User.LastName
        </div>

        <div style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 24px; color: #6366F1;" class="mb-3">
            @Model.User.Email
        </div>

        <div class="d-flex align-items-center gap-2">
            <span style="font-family: 'Inter', sans-serif; font-weight: 500; font-size: 14px; color: #111927;">Satici_id</span>
            <div class="px-3 py-1" style="background: rgba(17, 25, 39, 0.12); border-radius: 16px; font-family: 'Inter', sans-serif; font-weight: 500; font-size: 13px; color: #111927;">
                @Model.User.Id.Substring(0, 5)
            </div>
            <div class="badge bg-dark rounded-pill px-3 py-2 ms-2" style="font-family: 'Inter', sans-serif; font-weight: 500;">
                @Model.Products.Count İlan
            </div>
        </div>
    </div>

    <div class="bg-white" style="position: absolute; height: 362px; left: 769px; right: 154px; top: 282px; box-shadow: 0px 5px 22px rgba(0, 0, 0, 0.04), 0px 0px 0px 0.5px rgba(0, 0, 0, 0.03); border-radius: 20px; overflow: hidden;">
        <div style="position: absolute; left: 24px; top: 32px; font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 16.7px; color: #111927;">Basic Details</div>

        <div class="w-100" style="margin-top: 68px;">
            <div class="px-4 d-flex flex-column justify-content-center border-bottom" style="height: 72px;">
                <div style="font-family: 'Inter', sans-serif; font-weight: 500; font-size: 14px; color: #111927;">Email</div>
                <div style="font-family: 'Inter', sans-serif; font-weight: 400; font-size: 14px; color: #6C737F;">@Model.User.Email</div>
            </div>
            <div class="px-4 d-flex flex-column justify-content-center border-bottom" style="height: 72px;">
                <div style="font-family: 'Inter', sans-serif; font-weight: 500; font-size: 14px; color: #111927;">Phone</div>
                <div style="font-family: 'Inter', sans-serif; font-weight: 400; font-size: 14px; color: #6C737F;">@(Model.User.PhoneNumber ?? "+90 --- --- -- --")</div>
            </div>
            <div class="px-4 d-flex flex-column justify-content-center border-bottom" style="height: 72px;">
                <div style="font-family: 'Inter', sans-serif; font-weight: 500; font-size: 14px; color: #111927;">Country</div>
                <div style="font-family: 'Inter', sans-serif; font-weight: 400; font-size: 14px; color: #6C737F;">Turkey</div>
            </div>
            <div class="px-4 d-flex flex-column justify-content-center" style="height: 72px;">
                <div style="font-family: 'Inter', sans-serif; font-weight: 500; font-size: 14px; color: #111927;">Address</div>
                <div style="font-family: 'Inter', sans-serif; font-weight: 400; font-size: 14px; color: #6C737F;">@(Model.User.Address ?? "Adres bilgisi girilmemiş")</div>
            </div>
        </div>
    </div>

    <div class="bg-white" style="position: absolute; height: 172px; left: 299px; right: 46px; top: 716px; box-shadow: 0px 5px 22px rgba(0, 0, 0, 0.04), 0px 0px 0px 0.5px rgba(0, 0, 0, 0.03); border-radius: 20px; overflow: hidden; padding: 32px 24px;">
        <div style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 16.7px; color: #111927;" class="mb-4">Data Management</div>

        <div class="d-flex align-items-center gap-4">
            <form asp-action="DeleteUser" asp-route-id="@Model.User.Id" method="post" onsubmit="return confirm('Hesabı silmek istediğinize emin misiniz?')">
                <button type="submit" class="btn btn-outline-danger" style="border-radius: 12px; font-family: 'Inter', sans-serif; font-weight: 600; font-size: 14px; padding: 10px 24px;">
                    Delete Account
                </button>
            </form>
            <div style="font-family: 'Inter', sans-serif; font-weight: 400; font-size: 14px; color: #6C737F; max-width: 700px;">
                Remove this customer’s chart if he requested that, if not please be aware that what has been deleted can never brought back
            </div>
        </div>
    </div>

</div>