@model BendenSana.ViewModels.SellerDetailsViewModel

@{
    ViewData["Title"] = "Satıcı Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <a asp-action="Sellers" class="btn btn-outline-secondary btn-sm mb-3">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                        @(Model.User.FirstName?.Substring(0, 1) ?? Model.User.UserName?.Substring(0, 1) ?? "U")
                    </div>

                    <h4 class="fw-bold">@Model.User.FirstName @Model.User.LastName</h4>
                    <p class="text-muted">@Model.User.Email</p>
                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Aktif Satıcı</span>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between text-start">
                        <span class="text-muted">Kayıt Tarihi:</span>
                        <span class="fw-semibold">@DateTime.Now.ToString("dd.MM.yyyy")</span>
                    </div>
                    <div class="d-flex justify-content-between text-start mt-2">
                        <span class="text-muted">Toplam Ürün:</span>
                        <span class="fw-semibold">@Model.Products.Count</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Satıcının İlanları</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4">Ürün</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th class="text-end pe-4">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Products.Any())
                            {
                                foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                @{
                                                    var imgUrl = product.Images?.FirstOrDefault(x => x.IsMain)?.ImageUrl ?? "/images/no-image.png";
                                                }
                                                <img src="@imgUrl" class="rounded me-3" style="width: 40px; height: 40px; object-fit: cover;" />
                                                <span class="fw-semibold">@product.Title</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark border">
                                                @(product.Category?.Name ?? "-")
                                            </span>
                                        </td>
                                        <td class="fw-bold text-success">@product.Price.ToString("C")</td>
                                        <td class="text-end pe-4">
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" target="_blank" class="btn btn-sm btn-light border">
                                                İlanı Gör ↗
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        Bu satıcının henüz ilanı yok.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>