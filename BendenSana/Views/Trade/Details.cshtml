@model global::TradeOffer

@{
    ViewData["Title"] = "Takas Detayı";

    var requestedItems = Model.Items.Where(x => x.ItemType == global::TradeItemType.requested).ToList();
    var offeredItems = Model.Items.Where(x => x.ItemType == global::TradeItemType.offered).ToList();
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Takas Teklifi: <span class="text-primary">#@Model.TradeCode</span></h2>
            <p class="text-muted">
                Tarih: @Model.CreatedAt.ToShortDateString() |
                Durum:
                @if (Model.Status.ToString() == "pending")
                {
                    <span class="badge bg-warning text-dark">Bekliyor</span>
                }
                else if (Model.Status.ToString() == "accepted")
                {
                    <span class="badge bg-success">Kabul Edildi</span>
                }
                else
                {
                    <span class="badge bg-danger">Reddedildi</span>
                }
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card border-success h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📤 Teklif Edilen Ürünler (Verilen)</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in offeredItems)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                @if (item.Product.Images != null && item.Product.Images.Any())
                                {
                                    <img src="@item.Product.Images.First().ImageUrl" width="50" height="50" class="rounded me-3 border" style="object-fit:cover" />
                                }
                                else
                                {
                                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width:50px; height:50px"><i class="bi bi-box"></i></div>
                                }
                                <div>
                                    <h6 class="mb-0">@item.Product.Title</h6>
                                    <small class="text-muted">@item.Product.Price.ToString("C2")</small>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer bg-light">
                    <strong>Toplam Değer: </strong> @offeredItems.Sum(x => x.Product.Price).ToString("C2")
                </div>
            </div>
        </div>

        <div class="col-md-2 d-flex align-items-center justify-content-center my-3 my-md-0">
            <i class="bi bi-arrow-left-right fs-1 text-muted"></i>
        </div>

        <div class="col-md-5">
            <div class="card border-primary h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📥 İstenen Ürün (Alınan)</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in requestedItems)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                @if (item.Product.Images != null && item.Product.Images.Any())
                                {
                                    <img src="@item.Product.Images.First().ImageUrl" width="60" height="60" class="rounded me-3 border" style="object-fit:cover" />
                                }
                                <div>
                                    <h5 class="mb-0">@item.Product.Title</h5>
                                    <span class="badge bg-info text-dark mt-1">@item.Product.Price.ToString("C2")</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Status.ToString().ToLower() == "pending")
    {
        <div class="card mt-4 shadow-sm border-warning">
            <div class="card-body text-center">
                <h5 class="card-title">Bu takas teklifini onaylıyor musunuz?</h5>
                <p class="card-text text-muted">Onayladığınızda ürünlerin sahipliği otomatik olarak el değiştirecektir.</p>

                <div class="d-flex justify-content-center gap-3">
                    <form asp-action="AcceptOffer" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-lg px-5">
                            <i class="bi bi-check-lg"></i> Kabul Et
                        </button>
                    </form>

                    <form asp-action="RejectOffer" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-5">
                            <i class="bi bi-x-lg"></i> Reddet
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary mt-4 text-center">
            Bu teklif sonuçlanmıştır. (Durum: <strong>@Model.Status</strong>)
        </div>
    }
</div>