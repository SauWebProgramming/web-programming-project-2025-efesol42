@using System.Security.Claims
@using BendenSana.Models
@model List<TradeOffer>

@{
    ViewData["Title"] = "Takas Tekliflerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);

    // Gelen ve Giden Teklifleri Ayır
    var incomingOffers = Model.Where(x => x.ReceiverId == currentUserId).ToList();
    var outgoingOffers = Model.Where(x => x.OffererId == currentUserId).ToList();
}

<style>
    /* Figma Uyumlu Temiz Stiller */
    .trade-card {
        background: white;
        border: 1px solid #E5E7EB;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 30px;
        position: relative;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }

    .trade-date {
        color: #DB4444;
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 18px;
        margin-bottom: 20px;
    }

    /* Statü Badge */
    .status-badge {
        position: absolute;
        top: 24px;
        right: 24px;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-pending {
        background: #FFF7ED;
        color: #C2410C;
        border: 1px solid #FFEDD5;
    }

    .status-accepted {
        background: #ECFDF5;
        color: #047857;
        border: 1px solid #D1FAE5;
    }

    .status-rejected {
        background: #FEF2F2;
        color: #B91C1C;
        border: 1px solid #FEE2E2;
    }

    /* Ürün Alanları */
    .product-comparison {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
    }

    .product-column {
        flex: 1;
        max-width: 300px;
        text-align: left;
    }

    .product-label {
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 8px;
        display: block;
    }

    .label-yours {
        color: #DB4444;
    }

    .label-theirs {
        color: #059669;
    }

    .product-img-box {
        background: #F3F4F6;
        border-radius: 8px;
        height: 320px; /* Figma'daki gibi uzun görsel alanı */
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 12px;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resmi kutuya doldur */
    }

    .product-title {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 16px;
        color: #111;
        margin-bottom: 4px;
    }

    .product-price {
        font-family: 'Inter', sans-serif;
        font-weight: 500;
        font-size: 14px;
        color: #111;
    }

    .cash-offer {
        color: #059669;
        font-weight: 600;
        font-size: 14px;
        margin-top: 4px;
    }

    /* Ortadaki İkon */
    .exchange-icon-wrapper {
        width: 48px;
        height: 48px;
        background: #9CA3AF;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 20px;
        flex-shrink: 0;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    /* Butonlar */
    .btn-action-group {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-top: 24px;
        border-top: 1px solid #F3F4F6;
        padding-top: 20px;
    }

    .nav-tabs .nav-link.active {
        color: #DB4444;
        border-bottom: 2px solid #DB4444;
    }

    .nav-tabs .nav-link {
        color: #6B7280;
    }
</style>

<div class="container py-5">
    <div class="mb-5 text-muted small">Home / <span class="text-dark fw-bold">Takas Tekliflerim</span></div>

    <div class="row">
        <div class="col-lg-3 d-none d-lg-block">
            <div class="mb-4">
                <div class="fw-bold mb-3">Manage My Account</div>
                <ul class="list-unstyled ms-3">
                    <li class="mb-2"><a href="@Url.Action("EditProfile", "Profile")" class="text-decoration-none text-muted">My Profile</a></li>
                    <li class="mb-2"><a href="@Url.Action("Index", "Address")" class="text-decoration-none text-muted">Address Book</a></li>
                    <li class="mb-2"><a href="@Url.Action("Index", "Payment")" class="text-decoration-none text-muted">My Payment Options</a></li>
                </ul>
            </div>
            <div>
                <div class="fw-bold mb-3">My Orders</div>
                <ul class="list-unstyled ms-3">
                    <li class="mb-2"><a href="@Url.Action("Index", "Order")" class="text-decoration-none text-muted">Siparişlerim</a></li>
                    <li class="mb-2"><a href="@Url.Action("MyProducts", "Product")" class="text-decoration-none text-muted">Takas Ürünlerim</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-danger fw-bold">Takas Tekliflerim</a></li>
                </ul>
            </div>
        </div>

        <div class="col-lg-9">

            <ul class="nav nav-tabs mb-4" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#incoming">Gelen Teklifler</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#outgoing">Giden Teklifler</button>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="incoming">
                    @if (!incomingOffers.Any())
                    {
                        <div class="alert alert-light border text-center py-5">Gelen bir teklif yok.</div>
                    }

                    @foreach (var offer in incomingOffers)
                    {
                        var requestedItem = offer.Items.FirstOrDefault(x => x.ItemType == TradeItemType.requested)?.Product;
                        var offeredItem = offer.Items.FirstOrDefault(x => x.ItemType == TradeItemType.offered)?.Product;

                        // Eğer ürünlerden biri silinmişse bu teklifi gösterme (İSTEĞİN BU YÖNDEYDİ)
                        if (requestedItem == null || offeredItem == null) continue;

                        <div class="trade-card">
                            <div class="trade-date">@offer.CreatedAt.ToString("dd MMMM yyyy")</div>
                            <span class="status-badge status-@offer.Status.ToString().ToLower()">@offer.Status</span>

                            <div class="product-comparison flex-column flex-md-row">

                                <div class="product-column">
                                    <span class="product-label label-yours">SENİN ÜRÜNÜN</span>
                                    <div class="product-img-box">
                                        @if (requestedItem.Images != null && requestedItem.Images.Any())
                                        {
                                            <img src="@requestedItem.Images.First().ImageUrl" class="product-img" />
                                        }
                                        else
                                        {
                                            <div class="text-muted small">Görsel Yok</div>
                                        }
                                    </div>
                                    <div class="product-title">@requestedItem.Title</div>
                                    <div class="product-price">@requestedItem.Price.ToString("C0")</div>
                                </div>

                                <div class="exchange-icon-wrapper">
                                    <i class="bi bi-arrow-left-right"></i>
                                </div>

                                <div class="product-column">
                                    <span class="product-label label-theirs">TEKLİF EDİLEN</span>
                                    <div class="product-img-box">
                                        @if (offeredItem.Images != null && offeredItem.Images.Any())
                                        {
                                            <img src="@offeredItem.Images.First().ImageUrl" class="product-img" />
                                        }
                                        else
                                        {
                                            <div class="text-muted small">Görsel Yok</div>
                                        }
                                    </div>
                                    <div class="product-title">@offeredItem.Title</div>
                                    <div class="product-price">@offeredItem.Price.ToString("C0")</div>
                                    @if (offer.OfferedCashAmount > 0)
                                    {
                                        <div class="cash-offer">+ @offer.OfferedCashAmount?.ToString("C0") Nakit</div>
                                    }
                                </div>
                            </div>

                            @if (offer.Status == TradeOfferStatus.Pending)
                            {
                                <div class="btn-action-group">
                                    <form asp-controller="Trade" asp-action="Reject" method="post">
                                        <input type="hidden" name="id" value="@offer.Id" />
                                        <button class="btn btn-outline-secondary px-4">Reddet</button>
                                    </form>
                                    <form asp-controller="Trade" asp-action="Accept" method="post">
                                        <input type="hidden" name="id" value="@offer.Id" />
                                        <button class="btn btn-danger px-4">Kabul Et</button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="tab-pane fade" id="outgoing">
                    @if (!outgoingOffers.Any())
                    {
                        <div class="alert alert-light border text-center py-5">Giden bir teklif yok.</div>
                    }

                    @foreach (var offer in outgoingOffers)
                    {
                        var requestedItem = offer.Items.FirstOrDefault(x => x.ItemType == TradeItemType.requested)?.Product;
                        var offeredItem = offer.Items.FirstOrDefault(x => x.ItemType == TradeItemType.offered)?.Product;

                        if (requestedItem == null || offeredItem == null) continue;

                        <div class="trade-card">
                            <div class="trade-date">@offer.CreatedAt.ToString("dd MMMM yyyy")</div>
                            <span class="status-badge status-@offer.Status.ToString().ToLower()">@offer.Status</span>

                            <div class="product-comparison flex-column flex-md-row">
                                <div class="product-column">
                                    <span class="product-label label-yours">İSTEDİĞİN ÜRÜN</span>
                                    <div class="product-img-box">
                                        @if (requestedItem.Images != null && requestedItem.Images.Any())
                                        {
                                            <img src="@requestedItem.Images.First().ImageUrl" class="product-img" />
                                        }
                                        else
                                        {
                                            <div class="text-muted small">Görsel Yok</div>
                                        }
                                    </div>
                                    <div class="product-title">@requestedItem.Title</div>
                                    <div class="product-price">@requestedItem.Price.ToString("C0")</div>
                                </div>

                                <div class="exchange-icon-wrapper">
                                    <i class="bi bi-arrow-left-right"></i>
                                </div>

                                <div class="product-column">
                                    <span class="product-label label-theirs">SENİN TEKLİFİN</span>
                                    <div class="product-img-box">
                                        @if (offeredItem.Images != null && offeredItem.Images.Any())
                                        {
                                            <img src="@offeredItem.Images.First().ImageUrl" class="product-img" />
                                        }
                                        else
                                        {
                                            <div class="text-muted small">Görsel Yok</div>
                                        }
                                    </div>
                                    <div class="product-title">@offeredItem.Title</div>
                                    <div class="product-price">@offeredItem.Price.ToString("C0")</div>
                                    @if (offer.OfferedCashAmount > 0)
                                    {
                                        <div class="cash-offer">+ @offer.OfferedCashAmount?.ToString("C0") Nakit</div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>