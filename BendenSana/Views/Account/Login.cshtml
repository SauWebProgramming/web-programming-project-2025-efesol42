@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow">
        <div class="card-body">
            <h3 class="text-center mb-4">Giriş Yap</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label>Email Adresi</label>
                    <input type="email" name="email" class="form-control" required value="alici@test.com" />
                </div>
                <div class="mb-3">
                    <label>Şifre</label>
                    <input type="password" name="password" class="form-control" required value="Sifre123!" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>

            <hr />
            <div class="text-center">
                <small class="text-muted">Test için hızlı kurulum:</small><br />
                <a asp-action="CreateDemoUsers" class="btn btn-sm btn-outline-success mt-2">Demo Kullanıcıları Oluştur</a>
            </div>
        </div>
    </div>
</div>