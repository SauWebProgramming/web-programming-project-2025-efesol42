@model BendenSana.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Profili Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <div asp-validation-summary="All" class="text-danger mb-0"></div>
                </div>
            }

            <h2 class="fw-bold mb-4">Your Profile</h2>

            <div class="card border-0 shadow-sm p-4">
                <div class="card-body">
                    <h5 class="text-danger mb-4">Edit Your Profile</h5>

                    <form asp-action="EditProfile" method="post">

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
                                <input asp-for="FirstName" class="form-control bg-light border-0 py-2" placeholder="Adınız" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
                                <input asp-for="LastName" class="form-control bg-light border-0 py-2" placeholder="Soyadınız" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" class="form-control bg-light border-0 py-2" readonly />
                            <small class="text-muted">E-posta adresi güvenlik nedeniyle değiştirilemez.</small>
                        </div>

                        <h6 class="fw-bold mt-4 mb-3">Password Changes</h6>

                        <div class="mb-3">
                            <input asp-for="CurrentPassword" class="form-control bg-light border-0 py-2" placeholder="Current Password" />
                        </div>

                        <div class="mb-3">
                            <input asp-for="NewPassword" class="form-control bg-light border-0 py-2" placeholder="New Password" />
                        </div>

                        <div class="mb-4">
                            <input asp-for="ConfirmNewPassword" class="form-control bg-light border-0 py-2" placeholder="Confirm New Password" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-link text-decoration-none text-dark fw-semibold">Cancel</a>
                            <button type="submit" class="btn btn-danger px-4 py-2 fw-semibold">Save Changes</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>