@model Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4>Kategori Düzenle: @Model.Name</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Kategori Adı</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentId" class="form-label">Üst Kategori</label>
                            <select asp-for="ParentId" class="form-select" asp-items="ViewBag.Parents">
                                <option value="">-- Ana Kategori --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mevcut Görsel</label><br />
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" width="100" class="img-thumbnail mb-2" />
                            }
                            else
                            {
                                <span class="badge bg-secondary">Resim Yok</span>
                            }

                            <label class="form-label">Görseli Değiştir</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="text-muted">Resim değiştirmek istemiyorsanız boş bırakın.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>