@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kategori Listesi</h2>
        <a asp-action="Create" class="btn btn-success">+ Yeni Kategori</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm bg-white">
        <thead class="table-dark">
            <tr>
                <th style="width: 100px;">Görsel</th>
                <th>Kategori Adı</th>
                <th>Türü</th>
                <th style="width: 200px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parent in Model)
            {
                <tr class="table-light">
                    <td>
                        @if (!string.IsNullOrEmpty(parent.ImageUrl))
                        {
                            <img src="@parent.ImageUrl" width="50" height="50" style="object-fit:cover; border-radius:5px;" />
                        }
                    </td>
                    <td class="fw-bold text-primary">@parent.Name</td>
                    <td><span class="badge bg-primary">Ana Kategori</span></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@parent.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@parent.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu kategoriyi ve alt kategorilerini silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>

                @if (parent.Children != null && parent.Children.Any())
                {
                    foreach (var child in parent.Children)
                    {
                        <tr>
                            <td>
                                <div style="margin-left: 20px;">
                                    @if (!string.IsNullOrEmpty(child.ImageUrl))
                                    {
                                        <img src="@child.ImageUrl" width="40" height="40" style="object-fit:cover; border-radius:5px;" />
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="text-muted ms-3">↳ @child.Name</span>
                            </td>
                            <td><span class="badge bg-secondary">Alt Kategori</span></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@child.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@child.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>