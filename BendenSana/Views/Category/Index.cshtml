@model IEnumerable<global::Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4" style="background-color: #fcfcfc; min-height: 100vh; font-family: 'Inter', sans-serif;">

    <div class="mb-5">
        <div class="d-flex align-items-center mb-2" style="gap: 16px;">
            <div style="width: 20px; height: 40px; background: #DB4444; border-radius: 4px"></div>
            <span style="color: #DB4444; font-size: 16px; font-family: 'Poppins'; font-weight: 600;">Featured</span>
        </div>
        <h1 class="fw-bold" style="font-size: 36px; letter-spacing: 1.44px;">Allowed Categories For Sale Inside Site</h1>
    </div>

    <div class="d-flex flex-column gap-4">
        @foreach (var parent in Model)
        {
            <div class="card border-0 shadow-sm p-4" style="background: white; border-radius: 12px; border: 1px solid #D3D3D3 !important;">
                <div class="row align-items-start">

                    <div class="col-auto">
                        <div class="d-flex align-items-center justify-content-center bg-white border rounded" style="width: 140px; height: 150px; border: 1px solid #D3D3D3 !important;">
                            <img src="@(parent.ImageUrl ?? "https://placehold.co/113x120")"
                                 alt="@parent.Name"
                                 style="width: 113px; height: 120px; object-fit: contain;" />
                        </div>
                    </div>

                    <div class="col px-4">
                        <h4 class="fw-bold mb-1" style="font-size: 18px; color: #1C1A1A;">@parent.Name</h4>
                        <p class="mb-3" style="color: #9B9B9B; font-size: 12px;">Sub Categories</p>

                        <div class="d-flex flex-wrap gap-2">
                            @if (parent.Children != null && parent.Children.Any())
                            {
                                foreach (var child in parent.Children)
                                {
                                    <div class="px-3 py-1 bg-light rounded" style="font-size: 13px; color: #454545; border: 1px solid #eee;">
                                        @child.Name
                                    </div>
                                }
                            }
                            else
                            {
                                <span class="text-muted small italic">Alt kategori bulunamadı.</span>
                            }
                        </div>
                    </div>

                    <div class="col-auto d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@parent.Id"
                           class="btn btn-outline-danger btn-sm px-4 fw-bold"
                           style="border-color: #FF4F5A; color: #FF4F5A; border-radius: 4px;">
                            Edit
                        </a>

                        <form asp-action="Delete" asp-route-id="@parent.Id" method="post" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">
                            <button type="submit" class="btn btn-outline-danger btn-sm px-3 fw-bold"
                                    style="border-color: #FF4F5A; color: #FF4F5A; border-radius: 4px;">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Poppins:wght@600&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
