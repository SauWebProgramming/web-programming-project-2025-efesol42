@model IEnumerable<global::Category>

@{
    ViewData["Title"] = "Site's Categories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Allowed Categories For Sale Inside Site</h2>
            <p class="text-muted">Manage your product categories here.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add Category
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">

                        <div class="flex-shrink-0 me-4 border rounded p-2 bg-light">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.Name" style="width: 80px; height: 80px; object-fit: contain;">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center text-muted" style="width: 80px; height: 80px;">
                                    <i class="bi bi-image fs-1"></i>
                                </div>
                            }
                        </div>

                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-1">@item.Name</h5>
                            <p class="text-muted small mb-2">Main Category</p>

                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-light text-dark border">Sub-Category 1</span>
                                <span class="badge bg-light text-dark border">Sub-Category 2</span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-danger px-4">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger px-4" onclick="return confirm('Are you sure?');">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>