@model global::Category

@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold">Add Category</h1>
            <p class="text-muted">Create a new product category.</p>
        </div>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Basic details</h5>
            </div>
            <div class="card-body">

                <div class="mb-4">
                    <label class="form-label text-muted">Category Name</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Örn: Electronics" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label text-muted">Category Image</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    <div class="form-text">Jpg, Png formatları kabul edilir.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">Sub Categories (Gelecek Özellik)</label>
                    <div class="d-flex gap-2">
                        <input type="text" class="form-control" placeholder="Alt kategori yaz..." disabled>
                        <button type="button" class="btn btn-primary px-4" disabled>Add</button>
                    </div>
                    <small class="text-muted">* Alt kategori özelliği daha sonra eklenecek.</small>
                </div>

            </div>
            <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-success px-5">Save Category</button>
            </div>
        </div>

    </form>
</div>