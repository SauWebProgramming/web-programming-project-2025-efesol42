@model BendenSana.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<div class="container-fluid py-5" style="background-color: #F8F9FA; min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="mb-4">
                <div class="d-flex align-items-center gap-2 mb-1">
                    <span class="badge bg-danger rounded-1" style="background-color: #DB4444 !important;">Featured</span>
                </div>
                <h2 class="fw-bold" style="font-family: 'Inter', sans-serif; letter-spacing: -0.5px;">Add New Product</h2>
            </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-body p-4 p-lg-5">
                        <h5 class="card-title fw-bold mb-4 text-dark" style="font-family: 'Plus Jakarta Sans', sans-serif;">Basic details</h5>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label text-muted fw-bold small">Product Name</label>
                            <input asp-for="Title" class="form-control custom-input" placeholder="Ürün adını giriniz..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Description" class="form-label text-muted fw-bold small">Description</label>
                            <textarea asp-for="Description" class="form-control custom-input" rows="6" placeholder="Ürün hakkında detaylı bilgi verin..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-body p-4 p-lg-5">
                        <h5 class="card-title fw-bold mb-2 text-dark" style="font-family: 'Plus Jakarta Sans', sans-serif;">Images</h5>
                        <p class="text-muted small mb-4">Ürününüzün vitrinde görünecek fotoğrafları.</p>

                        <div class="upload-area p-5 text-center rounded-3 mb-3">
                            <div class="mb-3">
                                <div class="bg-light d-inline-block p-3 rounded-circle">
                                    <i class="bi bi-cloud-arrow-up fs-3 text-secondary"></i>
                                </div>
                            </div>
                            <h6 class="fw-bold text-decoration-underline">Fotoğraf Yükle</h6>
                            <p class="text-muted small mb-0">(SVG, JPG, PNG veya GIF - Maksimum 900x400)</p>

                            <input asp-for="Photos" type="file" multiple class="position-absolute top-0 start-0 opacity-0 w-100 h-100" style="cursor: pointer;" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-primary btn-upload" style="background-color: #6366F1;">
                                <i class="bi bi-upload me-2"></i> Fotoğraf Seç / Yükle
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-body p-4 p-lg-5">
                        <h5 class="card-title fw-bold mb-4 text-dark" style="font-family: 'Plus Jakarta Sans', sans-serif;">Pricing</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label text-muted fw-bold small">Price</label>
                                <div class="input-group">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control custom-input" placeholder="0.00" />
                                    <span class="input-group-text bg-transparent border-start-0 border-muted">₺</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-5 overflow-hidden">
                    <div class="card-body p-4 p-lg-5">
                        <h5 class="card-title fw-bold mb-4 text-dark" style="font-family: 'Plus Jakarta Sans', sans-serif;">Category</h5>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label text-muted fw-bold small">Product Category</label>
                            <select asp-for="CategoryId" class="form-select custom-input" asp-items="ViewBag.Categories">
                                <option value="">-- Kategori Seçiniz --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 pb-5">
                    <a asp-action="Index" class="btn btn-light px-4 py-2 fw-bold text-muted border">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5 py-2 fw-bold border-0 shadow-sm" style="background-color: #6366F1;">
                        Create
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

<style>
    /* Figma Tasarımına Özel CSS */
    body {
        font-family: 'Inter', sans-serif;
    }

    .custom-input {
        background-color: #fff;
        border: 1px solid #E5E7EB;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 14px;
        color: #111927;
        box-shadow: none;
    }

    .custom-input:focus {
        border-color: #6366F1;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
    }

    .upload-area {
        background-color: rgba(17, 25, 39, 0.04);
        border: 1px dashed #E5E7EB;
        position: relative;
        transition: all 0.3s;
    }

    .upload-area:hover {
        background-color: rgba(99, 102, 241, 0.05);
        border-color: #6366F1;
    }

    .btn-upload {
        border-radius: 12px;
        font-weight: 600;
        border: none;
        padding: 10px;
    }

    /* Select ok işaretini özelleştirme (Opsiyonel) */
    .form-select {
        background-position: right 1rem center;
    }
</style>