@model List<Product>

@{
    ViewData["Title"] = "Takas Ürünlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Takas Ürünlerim</h2>
            <p class="text-muted">Yayınladığınız ilanları buradan yönetebilirsiniz.</p>
        </div>
        <a asp-controller="Product" asp-action="Create" class="btn btn-dark">
            <i class="bi bi-plus-lg me-1"></i> Yeni İlan Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light border text-center py-5">
            <div class="mb-3">
                <i class="bi bi-box-seam fs-1 text-muted"></i>
            </div>
            <h4>Henüz hiç ürün eklemediniz.</h4>
            <p class="text-muted">Takas yapmak veya satmak istediğiniz ilk ürünü ekleyin.</p>
            <a asp-controller="Product" asp-action="Create" class="btn btn-outline-dark mt-2">Hemen İlan Ver</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="position-relative" style="height: 200px; overflow: hidden;">
                            @if (item.Images != null && item.Images.Any())
                            {
                                <img src="@item.Images.First().ImageUrl" class="card-img-top w-100 h-100" style="object-fit: cover;" alt="@item.Title">
                            }
                            else
                            {
                                <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-muted">
                                    <i class="bi bi-image fs-1"></i>
                                </div>
                            }
                            <span class="position-absolute top-0 end-0 m-2 badge bg-light text-dark shadow-sm">
                                @item.Status
                            </span>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title text-truncate">@item.Title</h5>
                            <p class="card-text fw-bold text-danger">@item.Price.ToString("C2")</p>

                            <div class="d-flex align-items-center justify-content-between mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-tag"></i> @(item.Category?.Name ?? "Genel")
                                </small>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @item.CreatedAt.ToString("dd.MM.yyyy")
                                </small>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 d-flex gap-2 pb-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary flex-grow-1 btn-sm">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');" class="flex-grow-1">
                                <button type="submit" class="btn btn-outline-danger w-100 btn-sm">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>