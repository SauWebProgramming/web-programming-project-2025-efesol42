@model BendenSana.ViewModels.AddressViewModel

@{
    ViewData["Title"] = "Add New Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Diğer sayfalarla ortak stiller */
    .breadcrumb-text { font-family: 'Poppins', sans-serif; font-size: 14px; color: #000; opacity: 0.5; }
    .breadcrumb-text span { opacity: 1; font-weight: 500; }

    /* Sol Menü */
    .account-sidebar-title { font-family: 'Poppins', sans-serif; font-size: 16px; font-weight: 600; color: #000; margin-bottom: 16px; }
    .account-sidebar-link { font-family: 'Poppins', sans-serif; font-size: 16px; color: #000; opacity: 0.5; text-decoration: none; display: block; margin-bottom: 12px; margin-left: 35px; transition: all 0.3s; }
    .account-sidebar-link:hover { opacity: 1; color: #DB4444; }
    .account-sidebar-link.active { color: #DB4444; opacity: 1; font-weight: 500; }

    /* Form Alanı */
    .address-card { background: white; border-radius: 4px; box-shadow: 0 1px 15px rgba(0,0,0,0.05); padding: 40px 80px; }
    .form-title { color: #DB4444; font-family: 'Poppins', sans-serif; font-weight: 500; font-size: 20px; margin-bottom: 24px; }
    .form-label-custom { font-family: 'Poppins', sans-serif; font-size: 16px; color: #000; margin-bottom: 8px; display: block; }

    .form-input-custom {
        width: 100%; background-color: #F5F5F5; border: none; border-radius: 4px; padding: 13px 16px;
        color: #000; font-family: 'Poppins', sans-serif; font-size: 14px;
    }
    .form-input-custom:focus { outline: 1px solid #DB4444; background-color: #fff; }

    .btn-save { background-color: #DB4444; color: white; border: none; border-radius: 4px; padding: 16px 48px; font-family: 'Poppins', sans-serif; font-weight: 500; font-size: 16px; cursor: pointer; transition: background 0.3s; }
    .btn-save:hover { background-color: #c93e3e; }

    .btn-cancel { background: transparent; border: none; color: #000; font-family: 'Poppins', sans-serif; font-size: 16px; margin-right: 24px; cursor: pointer; text-decoration: none; }
    .btn-cancel:hover { text-decoration: underline; }
</style>

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div class="breadcrumb-text">Home / <span>My Account</span></div>
        <div class="breadcrumb-text">Welcome! <span style="color: #DB4444;">@User.Identity.Name</span></div>
    </div>

    <div class="row">

        <div class="col-lg-3 mb-5 mb-lg-0">
            <div class="mb-4">
                <div class="account-sidebar-title">Manage My Account</div>
                <a href="@Url.Action("EditProfile", "Profile")" class="account-sidebar-link">My Profile</a>
                <a href="@Url.Action("Index", "Address")" class="account-sidebar-link active">Address Book</a>
                <a href="#" class="account-sidebar-link">My Payment Options</a>
            </div>
            <div>
                <div class="account-sidebar-title">My Orders</div>
                <a href="@Url.Action("Index", "Order")" class="account-sidebar-link">Siparişlerim</a>
                <a href="@Url.Action("MyProducts", "Product")" class="account-sidebar-link">Takas Ürünlerim</a>
                <a href="@Url.Action("Offers", "Trade")" class="account-sidebar-link">Takas Tekliflerim</a>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="address-card">
                <form asp-action="Create" method="post">

                    <h3 class="form-title">Add New Address</h3>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="ZipCode" class="form-label-custom">Posta Kodu</label>
                            <input asp-for="ZipCode" class="form-input-custom" placeholder="Örn: 34000" />
                            <span asp-validation-for="ZipCode" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mt-3 mt-md-0">
                            <label asp-for="Country" class="form-label-custom">Ülke</label>
                            <input asp-for="Country" class="form-input-custom" placeholder="Örn: Türkiye" />
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label-custom">Şehir</label>
                            <input asp-for="City" class="form-input-custom" placeholder="Örn: İstanbul" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mt-3 mt-md-0">
                            <label asp-for="District" class="form-label-custom">Mahalle</label>
                            <input asp-for="District" class="form-input-custom" placeholder="Örn: Kadıköy" />
                            <span asp-validation-for="District" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="AddressDetail" class="form-label-custom">Detaylı Açık Adres</label>
                        <input asp-for="AddressDetail" class="form-input-custom" placeholder="Cadde, Sokak, Bina No..." />
                        <span asp-validation-for="AddressDetail" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end align-items-center mt-5">
                        <a asp-action="Index" class="btn-cancel">Cancel</a>
                        <button type="submit" class="btn-save">Save Address</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>