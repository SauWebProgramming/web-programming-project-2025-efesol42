@model List<Address>

@{
    ViewData["Title"] = "Adreslerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Adreslerim</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Adres
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-geo-alt fs-1"></i>
            <p class="mt-3">Henüz kayıtlı bir adresiniz yok.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var address in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title fw-bold text-primary">@address.Title</h5>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Bu adresi silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@address.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>

                            <p class="card-text text-muted small mt-2">
                                @address.AddressLine <br />
                                @if (!string.IsNullOrEmpty(address.AddressLine2))
                                {
                                    <span>@address.AddressLine2 <br /></span>
                                }
                                <strong>@address.City / @address.Country</strong> <br />
                                @if (!string.IsNullOrEmpty(address.ZipCode))
                                {
                                    <span>PK: @address.ZipCode</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>