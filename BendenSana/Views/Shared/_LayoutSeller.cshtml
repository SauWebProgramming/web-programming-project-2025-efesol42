<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Satıcı Paneli</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #F8F9FA;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar ve Content Wrapper */
        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        /* Sidebar Stilleri */
        .seller-sidebar {
            min-width: 260px;
            max-width: 260px;
            background: #000;
            color: #fff;
            min-height: 100vh;
            position: fixed; /* Sabit kalması için */
            z-index: 999;
        }

        .sidebar-header {
            padding: 20px;
            font-size: 24px;
            font-weight: bold;
        }

            .sidebar-header a {
                color: white;
                text-decoration: none;
            }

        .menu-item {
            padding: 12px 20px;
            display: block;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            font-size: 14px;
            text-transform: uppercase;
            border-radius: 4px;
            margin: 4px 10px;
        }

            .menu-item:hover, .menu-item.active {
                background: #343A40;
                color: #fff;
            }

        .menu-label {
            font-size: 12px;
            color: #6c757d;
            padding: 20px 20px 10px;
            text-transform: uppercase;
            font-weight: 600;
        }

        /* Sağ Taraf (Content) Stilleri */
        .content-area {
            width: 100%;
            margin-left: 260px; /* Sidebar kadar boşluk */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .top-navbar {
            padding: 15px 30px;
            background: #fff;
            border-bottom: 1px solid #e3e6f0;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 15px;
        }

        .main-body {
            padding: 30px;
            flex: 1;
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <nav class="seller-sidebar">
            <div class="sidebar-header">
                <a href="/">Brand.</a>
            </div>

            <div class="mt-3">
                <a asp-controller="Seller" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">Dashboard</a>
                <a asp-controller="Product" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">Products</a>
                <a asp-controller="Order" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">Orders</a>
                <a asp-controller="Trade" asp-action="Index" class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Trade" ? "active" : "")">Takas Teklifleri</a>

                <div class="menu-label">Settings</div>
                <a asp-controller="Message" asp-action="Index" class="menu-item">Messages</a>
            </div>
        </nav>

        <div class="content-area">
            <div class="top-navbar">
                <button class="btn btn-light rounded-circle border"><i class="bi bi-bell"></i></button>
                <button class="btn btn-light rounded-circle border"><i class="bi bi-envelope"></i></button>
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                        <img src="https://placehold.co/32x32" class="rounded me-2">
                        <span>Derek Alvarado</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Çıkış</a></li>
                    </ul>
                </div>
            </div>

            <div class="main-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>