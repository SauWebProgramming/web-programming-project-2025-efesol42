<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - BendenSana Admin</title>

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Adminheader.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">

    <!-- ADMIN HEADER -->
    <div class="adm-topbar">
        <div class="container-fluid">
            <div class="d-flex justify-content-end align-items-center gap-2 py-2">

                <!-- Notification -->
                <button type="button" class="adm-topbar__btn position-relative" aria-label="Notifications">
                    <img src="~/icons/Alarm.png" class="adm-topbar__icon" alt="Notifications" />
                    <span class="adm-topbar__dot"></span>
                </button>

                <!-- Messages -->
                <button type="button" class="adm-topbar__btn" aria-label="Messages">
                    <img src="~/icons/Message.png" class="adm-topbar__icon" alt="Messages" />
                </button>

                <!-- User dropdown -->
                <div class="dropdown">
                    <button class="adm-topbar__user dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <img src="~/icons/user.png" class="adm-topbar__avatar" alt="User" />
                        <span class="adm-topbar__name">Derek Alvarado</span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="EditProfile">Profil</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Ayarlar</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Çıkış</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>


    <!-- PAGE CONTENT -->
    <slide class="container-fluid">
        <div class="row">

            <!-- SIDEBAR -->
            <div class="adm-shell is-collapsed">

                <!-- SIDEBAR -->
                <aside id="admSidebar" class="adm-sidebar">
                    <div class="adm-sidebar__header">
                        <div class="adm-sidebar__brand">Brand.</div>

                        <button id="admSidebarToggle"
                                type="button"
                                class="adm-sidebar__toggle"
                                aria-label="Toggle sidebar"
                                aria-expanded="true">
                            <span class="adm-sidebar__toggle-icon">←</span>
                        </button>
                    </div>

                    <div class="adm-sidebar__body">

                        <div class="adm-sidebar__group">
                            <a asp-controller="Seller" asp-action="Index" class="adm-sidebar__item">
                                DASHBOARD
                            </a>
                            <a asp-controller="Seller" asp-action="MyProducts" class="adm-sidebar__item">
                                PRODUCTS
                            </a>
                            <a asp-controller="Seller" asp-action="Orders" class="adm-sidebar__item">
                                ORDERS
                            </a>
                            <a asp-controller="Seller" asp-action="Trades" class="adm-sidebar__item">
                                TRADES
                            </a>
                        </div>

                        <div class="adm-sidebar__settings">
                            <div class="adm-sidebar__label">SETTINGS</div>

                            <a asp-controller="AdminMessage" asp-action="Index" class="adm-sidebar__item">
                                <img src="~/icons/message.png" class="adm-sidebar__item-icon" alt="Messages" />
                                MESSAGES
                            </a>
                        </div>

                    </div>
                </aside>

                <!-- CONTENT -->
                <div id="admContent" class="adm-content">
                    @* Üst bar vs. varsa burada *@
                    @RenderBody()
                </div>

            </div>


            <!-- MAIN -->
            <main class="col-12 col-md-9 col-lg-10 p-4">
                @RenderBody()
            </main>

        </div>
    </slide>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Adminheader.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
