@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model List<Conversation>

@{
    ViewData["Title"] = "Mesajlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = UserManager.GetUserId(User);
}

<div class="container py-5">
    <h3 class="fw-bold mb-4">Mesajlarım</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center py-5 border">
            <i class="bi bi-chat-square-text fs-1 text-muted"></i>
            <p class="mt-3 text-muted">Henüz hiç mesajlaşmanız yok.</p>
        </div>
    }
    else
    {
        <div class="list-group shadow-sm">
            @foreach (var conv in Model)
            {
                var otherUser = (conv.BuyerId == currentUser) ? conv.Seller : conv.Buyer;
                var lastMsg = conv.Messages.OrderByDescending(m => m.SentAt).FirstOrDefault();

                <a asp-action="Details" asp-route-id="@conv.Id" class="list-group-item list-group-item-action p-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-3 flex-shrink-0" style="width: 50px; height: 50px;">
                            @(otherUser?.UserName?.Substring(0, 1).ToUpper() ?? "-")
                        </div>

                        <div class="flex-grow-1 min-width-0">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <h6 class="mb-0 fw-bold text-dark">@otherUser?.UserName</h6>
                                <small class="text-muted">
                                    @(conv.LastMessageDate.ToString("dd.MM HH:mm"))
                                </small>
                            </div>

                            <div class="d-flex align-items-center gap-1 mb-1">
                                <i class="bi bi-box-seam text-primary small"></i>
                                <small class="fw-bold text-primary">@conv.Product?.Title</small>
                            </div>

                            <p class="mb-0 text-muted small text-truncate">
                                @(lastMsg?.Content ?? "Konuşma başladı...")
                            </p>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>